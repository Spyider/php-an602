#!/usr/bin/env php
<?php
require_once __DIR__ . '/_bootstrap.php';

$consoleConfig = [
    'controllerMap' => [
        'installer' => 'an602\modules\installer\commands\InstallController'
    ],
    'components' => [
        'urlManager' => [
            'baseUrl' => 'http://localhost:8080',
            'hostInfo' => 'http://localhost:8080',
        ]
    ]
];

$config = yii\helpers\ArrayHelper::merge(       
                // Common An602 Config
                require(YII_APP_BASE_PATH . '/an602/config/common.php'),
                // Console An602 Config
                require(YII_APP_BASE_PATH . '/an602/config/console.php'),
                // Test Config
                require(__DIR__ . '/../config/config.php'),
                // Console Test Config
                $consoleConfig
);

$application = new an602\components\console\Application($config);
$application->params['installed'] = false;

$exitCode = $application->run();
exit($exitCode);
